SubDir TOP schema ;

rule SchemaFile {
    local e ;
    e = $(<:G=engraved) ;
    MakeLocate $(e) : [ FDirName $(TOP) $(BUILD) ] ;
    Clean clean : $(e) ;
    Depends $(e) : $(<) ;
    SEARCH on $(<) = $(SEARCH_SOURCE) ;
    EngraveConfig $(e) : $(<) ;

    InstallFile $(INSTALLROOT)$(LIBDIR) : $(e) ;
}

SchemaFile schema.pg ;
SchemaFile flag-names ;
SchemaFile field-names ;
SchemaFile grant-privileges ;
