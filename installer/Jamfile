SubDir TOP installer ;
SubInclude TOP core ;
SubInclude TOP db ;

Build installer : installer.cpp ;

DBPASS ?= "" ;

ObjectDefines installer.cpp :
     LIBDIR='\"$(LIBDIR)\"'
     CONFIGDIR='\"$(CONFIGDIR)\"'
     LOGFILE='\"$(LOGFILE)\"'
     LOGFILEMODE='\"$(LOGFILEMODE)\"'
     PSQL='\"$(PSQL)\"'
     DBUSER='\"$(DBUSER)\"'
     DBNAME='\"$(DBNAME)\"'
     DBPASS='\"$(DBPASS)\"' ;

NoCare <>Jamsettings ;
Depends [ FGristFiles installer.o ] : <>Jamsettings ;

Program installer :
    installer database server mailbox message user core encodings 
    extractors ;
LINKLIBS on installer = -lcrypt ;
