SubDir TOP imapd ;

SubInclude TOP db ;
SubInclude TOP sasl ;
SubInclude TOP server ;
SubInclude TOP message ;

HDRS += [ FDirName $(TOP) imapd ] ;
SubInclude TOP imapd handlers ;

Build imap : imap.cpp imapsession.cpp command.cpp ;

Build imapd : imapd.cpp ;

Server imapd : imap imapd database message server sasl mailbox core
    encodings user extractors ;

LINKLIBS on imapd = -lcrypt ;
