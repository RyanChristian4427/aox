SubDir TOP pop3d ;

SubInclude TOP db ;
SubInclude TOP sasl ;
SubInclude TOP server ;
SubInclude TOP message ;

HDRS += [ FDirName $(TOP) pop3d ] ;

Build pop : pop.cpp popcommand.cpp ;
Build pop3d : pop3d.cpp ;

Server pop3d : pop3d pop database message server sasl mailbox core
    encodings user extractors ;
