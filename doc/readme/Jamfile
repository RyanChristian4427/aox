SubDir TOP doc readme ;


rule ReadmeFile {
    local e ;
    e = $(<:G=engraved) ;
    MakeLocate $(e) : [ FDirName $(TOP) $(BUILD) ] ;
    Depends readme : $(e) ;
    Clean clean : $(e) ;
    Depends $(e) : $(<) ;
    SEARCH on $(<) = $(SEARCH_SOURCE) ;
    EngraveConfig $(e) : $(<) ;

    InstallFile $(INSTALLROOT)$(READMEDIR) : $(e) ;
}


ReadmeFile README ;
ReadmeFile COPYING ;
ReadmeFile osl-3.0.txt ;


