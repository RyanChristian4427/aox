SubDir TOP tlsproxy ;
SubInclude TOP server ;

OrigHDRS = $(HDRS) ;

if ( $(USE_SYSTEM_CRYPTLIB) = "yes" ) {
    # nothing
}
else {
    SubInclude TOP cryptlib ;

    HDRS += [ FDirName $(TOP) cryptlib ] ;
}

Build tls : tlsproxy.cpp ;

Program tlsproxy : tls server core cryptlib ;

if ( $(USE_SYSTEM_CRYPTLIB) = "yes" ) {
    LINKLIBS on tlsproxy = -lcl ;
}
else {
    # nothing here
}

HDRS = $(OrigHDRS) ;
