SubDir TOP scripts ;
SubInclude TOP core ;


rule ShellScript {
    local s t ;

    t = $(<) ;
    MakeLocate $(t) : [ FDirName $(TOP) bin ] ;
    Depends exe : $(t) ;

    s = $(<:G=<$SUBDIR>) ;
    SEARCH on $(s) = $(SEARCH_SOURCE) ;

    Depends $(t) : $(s) <>Jamsettings ;
    EngraveConfig $(t) : $(s) ;

    InstallBin $(BINDIR) : $(t) ;

    Clean clean : $(t) ;
}


ShellScript rcmailstore ;

