SubDir TOP encodings words ;

rule Wordlist
{
    Depends $(<) : $(>) ;
    Clean clean : $(<) ;
    SEARCH on $(>) = $(SEARCH_SOURCE) ;
    MakeLocate $(<) : $(LOCATE_SOURCE) ;
}

actions Wordlist
{
    $(TOP)/encodings/words/mkwordlist $(TOP)/encodings/words > $(<) || rm $(<)
}


Wordlist wordlist.inc : mkwordlist
    german.words french.words dutch.words 
    czech.words
    ;
