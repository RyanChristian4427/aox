SubDir TOP msconsole ;
SubInclude TOP server ;

rule Moc
{
    # o is the .o file, t is the target .cpp
    local t = [ FGristFiles $(<) ] ;
    local o = $(t:S=$(SUFOBJ)) ;

    SEARCH on $(>) = $(SEARCH_SOURCE) ;
    LOCATE on $(t) = $(LOCATE_TARGET) ;

    Clean $(t) ;
    RmTemps $(o) : $(t) ;
    LEAVES $(o) ;

    DEPENDS $(o) : $(t) ;
    DEPENDS $(t) : $(>) $(LOCATE_TARGET) ;
    MkDir $(LOCATE_TARGET) ;
    Moc2 $(t) : $(>) ;
}

actions Moc2
{
echo '#include "cstring.h"' > $(<) ; for i in $(>) ; do ( cd `dirname $i` ; moc `basename $i` ) ; done >> $(<)
}


Build msconsole : console.cpp userpane.cpp mailboxpane.cpp msconsole.cpp
    consoleloop.cpp searchedit.cpp guilog.cpp migrationpane.cpp logpane.cpp
    permissioneditor.cpp migrator.cpp
    dirtree.cpp mbox.cpp mh.cpp cyrus.cpp
    .msconsole.moc.cpp ;

UseLibrary console.cpp : qt ;

Program msconsole :
    msconsole database server mailbox message user core encodings
    admintools extractors ;

Moc .msconsole.moc.cpp : console.h userpane.h mailboxpane.h searchedit.h
    consoleloop.h migrationpane.h permissioneditor.h migrator.h
    logpane.h ;
